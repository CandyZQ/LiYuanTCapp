<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context="com.liyuaninc.liyuan.help.opmodehelp">

    <Button
        android:id="@+id/X"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="85dp"
        android:layout_marginTop="92dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Y"
        android:layout_width="60sp"
        android:layout_height="50sp"
        android:layout_marginTop="31dp"
        android:background="@android:color/transparent"
        android:layout_marginEnd="49dp"
        android:layout_alignTop="@+id/X"
        android:layout_alignEnd="@+id/X" />

    <Button
        android:id="@+id/A"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@+id/Y"
        android:layout_alignStart="@+id/X" />

    <Button
        android:id="@+id/B"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_toEndOf="@+id/A"
        android:layout_alignTop="@+id/Y" />

    <Button
        android:id="@+id/up"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/down"
        android:layout_alignStart="@+id/left"
        android:layout_marginStart="39dp" />

    <Button
        android:id="@+id/left"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="49dp"
        android:layout_alignBottom="@+id/Y"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/down"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/right" />

    <Button
        android:id="@+id/right"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/Y"
        android:layout_toEndOf="@+id/up" />

</RelativeLayout>
