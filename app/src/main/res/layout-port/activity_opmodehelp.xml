<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context="com.liyuaninc.liyuan.help.opmodehelp">

    <Button
        android:id="@+id/X"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="119dp"
        android:layout_marginTop="147dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Y"
        android:layout_width="60sp"
        android:layout_height="50sp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:layout_marginEnd="6dp"
        android:layout_below="@+id/X"
        android:layout_toStartOf="@+id/X" />

    <Button
        android:id="@+id/A"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/Y"
        android:layout_alignStart="@+id/X" />

    <Button
        android:id="@+id/B"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/Y"
        android:layout_alignBottom="@+id/Y"
        android:layout_toEndOf="@+id/A"
        android:layout_marginStart="7dp" />

    <Button
        android:id="@+id/up"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/B"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/left"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/Y"
        android:layout_toStartOf="@+id/right" />

    <Button
        android:id="@+id/down"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/Y"
        android:layout_toEndOf="@+id/up" />

    <Button
        android:id="@+id/right"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/up" />

</RelativeLayout>
