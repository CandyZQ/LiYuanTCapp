<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set6"
    android:orientation="vertical"
    tools:context="com.liyuaninc.liyuan.settings.settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/tosmsetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/back_icon" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:text="个人设置"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="146dp"
            app:srcCompat="@drawable/setting"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="51dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <Button
                android:id="@+id/changetoasttextcolor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/singledog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/changetoasttextcolor"
                android:layout_alignBottom="@+id/changetoasttextcolor"
                android:layout_toEndOf="@+id/imageView15"
                android:text="TabToast"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                app:srcCompat="@mipmap/black_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView14"
                android:layout_toEndOf="@+id/imageView15"
                android:text="修改文字背景颜色" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
